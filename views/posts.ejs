<!DOCTYPE html>
<html lang="en">
  <%- include('partials/header') %>
  <body>
    <div class="wrapper">
      <%- include('partials/navbar') %>
      <main>
        <nav>
          <a href="/"><< Go Back</a>
        </nav>
        <h1>Your Posts</h1>
        <% if (posts.length === 0) { %>
        <p>You have no posts</p>

        <% } else { %> <% posts.forEach(post => { %>
        <div class="li-post">
          <a
            href="posts/<%= post.slug%>
              "
            ><p><%= post.title %></p>
          </a>
          <p><%= post.date %></p>
          <p><%= post.author%></p>
        </div>

        <% }) %> <% } %>
      </main>
    </div>
  </body>
</html>
